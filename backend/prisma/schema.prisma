generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model board {
  id    Int     @id @default(autoincrement())
  name  String
  type  String
  date  DateTime  @default(now())
  cards cards[]
}

model cards {
  card_id Int     @id @default(autoincrement())
  board   board?   @relation(fields: [board_id], references: [id])
  message String
  gif     String
  author  String?
  votes   Int
  board_id Int?
}